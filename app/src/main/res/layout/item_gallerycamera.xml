<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    android:layout_height="180dp"
    android:layout_gravity="center"
    app:cardCornerRadius="5dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <com.dbvertex.dilsayproject.customStyle.TextViewLailaibold
                android:id="@+id/lbl"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Choose Option"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:tint="@color/colorPrimary"
                android:layout_margin="10dp"
                android:layout_gravity="right"/>
            <ImageView
                android:id="@+id/crossIV"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/cancel"
                android:tint="@color/colorPrimary"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ok"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/gradientcurverectangle"
            android:layout_marginTop="1dp"
            android:gravity="center"
            >
            <com.dbvertex.dilsayproject.customStyle.TextViewLailaregular
                android:id="@+id/gallLBL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:text="Gallery"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/curverectanglepicback"
            android:gravity="center"
            >
            <com.dbvertex.dilsayproject.customStyle.TextViewLailaregular
                android:id="@+id/cameraLBL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"
                android:text="Camera"/>

        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>
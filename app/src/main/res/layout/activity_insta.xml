<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".insta.InstaActivity">


    <LinearLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/app_name"
            />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/app_name"

            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/veryLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:visibility="gone"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_intaverify"
            android:layout_gravity="center"

            />

        <com.dbvertex.dilsayproject.customStyle.TextViewLailaibold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insta Verification is successfull"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            />



        <com.dbvertex.dilsayproject.customStyle.ButtonLailaregular
            android:id="@+id/continueBtn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="OK"
            android:background="@drawable/rippleeffect"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="18sp"

            />



    </LinearLayout>

</LinearLayout>
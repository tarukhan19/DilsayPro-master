<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    app:cardCornerRadius="20dp"
    android:background="@drawable/back"
    app:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <com.dbvertex.dilsayproject.customStyle.TextViewLailaibold
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:text="@string/app_name"
            android:background="@drawable/tranparentback"
            />


            <com.dbvertex.dilsayproject.customStyle.TextViewLailaregular
                android:id="@+id/tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="@string/app_name"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"



                />




    </LinearLayout>


       <LinearLayout
           android:id="@+id/bottomLL"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_above="@id/applybutton"
           android:layout_marginBottom="10dp"

           >

           <LinearLayout
               android:id="@+id/freetrialLL"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginLeft="10dp"
               >
               <RadioButton
                   android:id="@+id/freetrial"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:buttonTint="@color/white"
                   android:checked="true"

                   />

               <com.dbvertex.dilsayproject.customStyle.TextViewLailaregular
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="7 days free trial"
                   android:textSize="14sp"
                   android:textColor="@color/white"

                   />

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_above="@id/applybutton"
               android:layout_marginLeft="10dp"
               >

               <LinearLayout
                   android:id="@+id/payLL"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_above="@id/applybutton"
                   >

                   <RadioButton
                       android:id="@+id/pay"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:buttonTint="@color/white"

                       />

                   <com.dbvertex.dilsayproject.customStyle.TextViewLailaregular
                       android:id="@+id/priceTV"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="$20 Pay"
                       android:textSize="14sp"
                       android:textColor="@color/white"


                       />

               </LinearLayout>

               <com.dbvertex.dilsayproject.customStyle.TextViewLailaregular
                    android:id="@+id/applycoupon"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Apply Coupon Code"
                   android:textSize="10sp"
                   android:padding="15dp"
                   android:layout_marginLeft="20dp"
                   android:textColor="@color/yellow"


                   />



           </LinearLayout>

       </LinearLayout>


    <com.dbvertex.dilsayproject.customStyle.ButtonLailaregular
        android:id="@+id/applybutton"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Apply"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:textAllCaps="false"
        android:background="@drawable/applybutton"

        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        />
    </RelativeLayout>
</androidx.cardview.widget.CardView>

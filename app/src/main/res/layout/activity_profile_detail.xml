<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    xmlns:zhy="http://schemas.android.com/apk/res-auto"


    tools:context=".ProfileDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@drawable/back">

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="300dp">

                <com.dbvertex.dilsayproject.customStyle.AutoScrollViewPager
                    android:id="@+id/autoPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/semi_trans">
                </RelativeLayout>


                <com.viewpagerindicator.CirclePageIndicator
                    android:id="@+id/indicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/autoPager"
                    android:layout_marginBottom="10dp"
                    app:fillColor="@color/colorPrimary"
                    app:pageColor="@color/transparent"
                    app:radius="4dp"
                    app:strokeColor="@color/colorPrimary"
                    app:strokeWidth="1dp" />


                <ImageView
                    android:id="@+id/backIV"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/back_img"
                    android:layout_marginStart="6dp"
                    android:layout_marginLeft="6dp"
                     />
                <ImageView
                    android:id="@+id/menubar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/ic_menubar"
                    android:layout_marginStart="6dp"
                    android:layout_marginLeft="6dp"
                    />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="5dp"
                android:weightSum="1"
                >

                <com.dbvertex.dilsayproject.customStyle.TextViewLailaibold
                    android:id="@+id/usernameTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/black"
                    android:layout_weight="0.6"
                    android:textSize="22sp"

                    />
                <com.dbvertex.dilsayproject.customStyle.TextViewLailaregular
                    android:id="@+id/ageTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=" 29"
                    android:layout_weight="0.2"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:gravity="right"
                    />


                <LinearLayout
                    android:id="@+id/messageLL"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/rippleeffect"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="0.2"
                    >
                    <com.dbvertex.dilsayproject.customStyle.TextViewLailaregular
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Message"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="14sp"

                        />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                >

                <com.dbvertex.dilsayproject.customStyle.TextViewLailaregular
                    android:id="@+id/professionTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doctor,"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    />

                <com.dbvertex.dilsayproject.customStyle.TextViewLailaregular
                    android:id="@+id/religionTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Muslim,"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    />
                <com.dbvertex.dilsayproject.customStyle.TextViewLailaregular
                    android:id="@+id/countryTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" India"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:gravity="right"
                    />


            </LinearLayout>

            <com.dbvertex.dilsayproject.customStyle.TextViewLailaregular
                android:id="@+id/descriptionTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum, in graphical and textual context, refers to filler text that is placed in a document or visual presentation. Lorem ipsum is derived from the Latin dolorem ipsum roughly translated as pain itself."
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"

                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:layout_marginBottom="20dp"
                />
            <com.dbvertex.dilsayproject.customStyle.TextViewLailaibold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Details :"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="10dp"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    >
                    <com.dbvertex.dilsayproject.customStyle.TextViewLailaibold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Height"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:textAllCaps="true"
                        />

                    <com.dbvertex.dilsayproject.customStyle.TextViewLailaregular
                        android:id="@+id/heightTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5,9"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    >
                    <com.dbvertex.dilsayproject.customStyle.TextViewLailaibold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Community"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:textAllCaps="true"

                        />

                    <com.dbvertex.dilsayproject.customStyle.TextViewLailaregular
                        android:id="@+id/communityTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pathan"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="10dp"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    >
                    <com.dbvertex.dilsayproject.customStyle.TextViewLailaibold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EDUCATION"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        />

                    <com.dbvertex.dilsayproject.customStyle.TextViewLailaregular
                        android:id="@+id/educationTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5,9"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    >
                    <com.dbvertex.dilsayproject.customStyle.TextViewLailaibold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CAREER"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        />

                    <com.dbvertex.dilsayproject.customStyle.TextViewLailaregular
                        android:id="@+id/careerTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pathan"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="10dp"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    >
                    <com.dbvertex.dilsayproject.customStyle.TextViewLailaibold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SMOKING"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        />

                    <com.dbvertex.dilsayproject.customStyle.TextViewLailaregular
                        android:id="@+id/smokingTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5,9"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    >
                    <com.dbvertex.dilsayproject.customStyle.TextViewLailaibold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DRINKING"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        />

                    <com.dbvertex.dilsayproject.customStyle.TextViewLailaregular
                        android:id="@+id/drinkingTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pathan"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="10dp"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    >
                    <com.dbvertex.dilsayproject.customStyle.TextViewLailaibold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DIET"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        />

                    <com.dbvertex.dilsayproject.customStyle.TextViewLailaregular
                        android:id="@+id/dietTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5,9"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    >

                </LinearLayout>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:layout_marginBottom="20dp"
                />


            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/id_flowlayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:tag_gravity="center"
                android:foregroundGravity="center"
                zhy:max_select="-1">

            </com.zhy.view.flowlayout.TagFlowLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:layout_marginBottom="20dp"
                />



            <LinearLayout
                android:id="@+id/blockLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/ic_block"
                    android:layout_gravity="center"

                    />

                <com.dbvertex.dilsayproject.customStyle.TextViewLailaregular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Block &amp; Report"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:weightSum="3"
                >


                <LinearLayout
                    android:id="@+id/thinklater"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="end"
                    >

                    <ImageView
                        android:id="@+id/thinklaterIV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/activity_no_feel_thinklater"
                        android:layout_gravity="end"
                        android:padding="10dp"
                        android:background="@drawable/solidwhitecircle"

                        />



                </LinearLayout>


                <LinearLayout
                    android:id="@+id/likeLL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"

                    >


                    <ImageView
                        android:id="@+id/likeIV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/activity_like_feel"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:background="@drawable/solidwhitecircle"

                        />



                </LinearLayout>


                <LinearLayout
                    android:id="@+id/dislikeLL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="start"
                    >


                    <ImageView
                        android:id="@+id/dislikeIV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/activity_dislike_feel"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:background="@drawable/solidwhitecircle"

                        />


                </LinearLayout>



            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"

                android:gravity="center"
                >




            </LinearLayout>



        </LinearLayout>


    </ScrollView>

</layout>